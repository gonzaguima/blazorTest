@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me to increment</button>
<button class="btn btn-primary" @onclick="DecreaseCount">Click me to decrement</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

    void DecreaseCount()
    {
        currentCount--;
    }
}
